@model AxisBank.Models.UserProfileDetailsModel
@{
    ViewBag.Title = "UserPanel";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<style>
    /* Main Section */
    .image {      
        border-radius: 30px;
    }
    .main {
        position: relative;
        padding: 20px;
        width: 100%;
        color: #fff; /* Text color */
    }

    .main-skills {
        display: flex;
        margin-top: 20px;
        justify-content: space-between;
    }

        .main-skills .card {
            width: 200px;
            height: 200px;
            margin: 10px;
            text-align: center;
            border-radius: 20px;
            box-shadow: 0 20px 35px rgba(0, 0, 0, 0.1);
            background: rgba(255, 255, 255, 0.8); /* Semi-transparent white background */
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

            .main-skills .card h3 {
                margin: 10px;
                text-transform: capitalize;
                color: #333; /* Dark text color */
            }

            .main-skills .card p {
                font-size: 12px;
                color: #555; /* Medium text color */
            }

            .main-skills .card button {
                background: orangered;
                color: #fff;
                padding: 7px 15px;
                border-radius: 10px;
                cursor: pointer;
            }

                .main-skills .card button:hover {
                    background: rgba(223, 70, 15, 0.856);
                }

            .main-skills .card i {
                font-size: 22px;
                padding: 10px;
            }

            /* Cards background color */
            .main-skills .card:nth-child(1) {
                background: #FF5252; /* Red color */
            }

            .main-skills .card:nth-child(2) {
                background: gray; /* Blue color */
            }

            .main-skills .card:nth-child(3) {
                background: #00BCD4; /* Cyan color */
            }

            .main-skills .card:nth-child(4) {
                background: #FFA726; /* Orange color */
            }
            .main-skills .card h5 {
                color: rgba(255, 255, 255, 0.8);
                font-weight: bold;
            }
            .main-skills .card h3 {
                color: rgba(255, 255, 255, 0.8);
                font-weight: bold;
            }
            .main-skills .card h4 {
                color: rgba(255, 255, 255, 0.8);
                font-weight: bold;
            }
</style>

<div class="main">
    <div class="main-skills">
        <div class="card">
            <div class="card-header ">
                <i class="fas fa-file-invoice"></i>
            </div>
            <div class="card-body">
                <h4>Account Balance</h4>
            </div>
            <div class="card-footer ">
                <h5>@Model.TotalBalance</h5>
            </div>
          
          


            
        </div>
      
        <div class="card">
            <div class="card-header ">
                <i class="fas fa-user"></i>
            </div>
            <div class="card-body">
                <h4>Profile</h4>
            </div>
            <div class="card-footer ">
            @Html.ActionLink("View Profile", "Profile", "User")
            </div>
         
       

         

        </div>
        <div class="card">
            <div class="card-header ">
                <i class="fas fa-sun"></i>
            </div>
            <div class="card-body">
                <h4>Have a Good </h4>
                <h5>@DateTime.Today.DayOfWeek</h5>
            </div>
            <div class="card-footer ">
              <h4></h4>
            </div>
         
          
           
        </div>
    </div>
</div>




