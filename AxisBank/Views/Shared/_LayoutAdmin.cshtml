
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <style>
    </style>

    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.12.1/dist/sweetalert2.all.min.js"></script>
    <link href="~/Content/DesignForm.css" rel="stylesheet" />

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="~/Images/unnamed.png" alt="logo" width="45" height="45">
                Axis Bank
            </a>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-user-circle rounded-circle" style="font-size: 24px;"></i>
                        <strong>

                            [@if (User.Identity.IsAuthenticated)
                            {

                                @User.Identity.Name
                            }]

                            (@Session["roleName"])
                        </strong>


                    </a>

                </li>


            </ul>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar vh-100 sticky-top">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("AdminPanel", "Admin")">
                                <i class="fas fa-chart-bar"></i> Dashboard
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user"></i>Employee Accounts
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="accountsDropdown">
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("AddEmployee", "Admin")">
                                        <i class="fas fa-user-plus"></i> Create Employee
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("ShowAllEmployee", "Admin")">
                                        <i class="fas fa-users"></i> Select Employees
                                    </a>
                                </li>
                            </ul>


                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user"></i>User Accounts
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="accountsDropdown">
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("CreateNewAccount", "Admin")">
                                        <i class="fas fa-user-plus"></i> Create User
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("ShowAllUsers", "Admin")">
                                        <i class="fas fa-users"></i> Select Users
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Settings", "Admin")">
                                <i class="fas fa-cog"></i> Settings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Logout", "Admin")">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <!-- Content for your admin panel goes here -->

                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Include Bootstrap JS, Popper.js, and Font Awesome -->

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js"></script>
    <script src=" https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.1/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>

</body>
</html>

